<div class="container mx-auto mt-10 px-5 mx-auto w-full">
  <div class="flex ">
    <div class="mx-auto md:w-2/3 w-full ">
      <div class="mx-auto">
        <div class="mb-6 flex justify-between">

          <h1 class="font-bold text-4xl"><%= @group[:name] %></h1>
          <div data-controller="modal">

            <button data-action="modal#open" class="rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium">Edit group</button>
            <dialog data-modal-target="modal">

              <button type="button" data-action="modal#close" class="absolute top-4 right-4">X</button>
              <%= render template: "groups/edit" %>

            </dialog>
          </div>
        </div>
      <div>
        <%= render template: "posts/new"%>
      </div>
    </div>
    
    <div>
      <h1 class="font-bold text-2xl mb-4">All Posts</h1>
      <%= render(PostComponent.new(post: @posts)) %>
    </div>
  </div>
  <div class="ml-2 flex flex-col w-1/5 mt-16">
    <h2 class="text-2xl">Members</h2>
    <% @users.each do |user| %>
      <%= user.email[/^[^@]+/] %>
    <%end%>
  </div>
</div>
