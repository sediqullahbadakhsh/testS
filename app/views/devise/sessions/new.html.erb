<div class="login flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-md space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Log in</h2>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
      <div class ="mt-8 space-y-6">
        <div class="-space-y-px rounded-md shadow-sm">
          <div>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: :email, class:"relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-4 py-4 text-gray-900 placeholder-gray-500 focus:z-10 mb-4 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" %>
          </div>

          <div>
              <%= f.password_field :password, autocomplete: "current-password", placeholder: :password, class:"relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-4 py-4 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" %>
          </div>
        </div>

          <div class="group relative flex w-full justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
            <%= f.submit "Log in" %>
          </div>

      </div>
    <% end %>
  </div>
</div>