<% @post.each do |p|  %>
    <div class="flex gap-4 flex-col mb-4 rounded shadow-lg p-3">
        <p class="text-2xl"><%=p.title%></p>
        <p class="mt-2"><%=p.content%></p>
        <div class="flex gap-7 mb-2 text-color">
            <p><%= distance_of_time_in_words(p.updated_at, DateTime.now)%></p>
            <p>Edit</p>
            <p>Delete</p>
            <p>by: <%= p.user.email[/^[^@]+/]%></p>
        </div>
        <p><%=link_to "View Post", group_post_path(params[:id], p.id)%></p>
    </div>
<%end%>
